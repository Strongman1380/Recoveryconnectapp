{
  "name": "recovery-connect",
  "displayName": "Recovery Connect",
  "version": "1.0.0",
  "description": "Comprehensive mental health and addiction recovery support platform",
  "main": "index.html",
  "type": "module",
  "author": "Recovery Connect Team",
  "homepage": "https://recoveryconnect.app",
  "license": "MIT",
  "scripts": {
    "start": "npx http-server . -p 3000",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "echo 'No tests specified'",
    "ionic:build": "npm run build",
    "ionic:serve": "npm run dev",
    "android": "npx cap run android",
    "ios": "npx cap run ios",
    "build:mobile": "npm run build && npx cap sync",
    "open:android": "npx cap open android",
    "open:ios": "npx cap open ios",
    "sync": "npx cap sync",
    "copy": "npx cap copy",
    "update": "npx cap update"
  },
  "keywords": [
    "mental health",
    "addiction recovery",
    "sobriety tracker",
    "meditation",
    "cbt tools",
    "peer support",
    "crisis support",
    "wellness",
    "recovery",
    "mindfulness",
    "firebase"
  ],
  "dependencies": {
    "firebase": "^10.0.0",
    "@capacitor/android": "^5.5.1",
    "@capacitor/app": "^5.0.6",
    "@capacitor/core": "^5.5.1",
    "@capacitor/device": "^5.0.6",
    "@capacitor/filesystem": "^5.1.4",
    "@capacitor/geolocation": "^5.0.6",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/ios": "^5.5.1",
    "@capacitor/keyboard": "^5.0.6",
    "@capacitor/local-notifications": "^5.0.6",
    "@capacitor/network": "^5.0.6",
    "@capacitor/push-notifications": "^5.1.0",
    "@capacitor/share": "^5.0.6",
